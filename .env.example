# ─────────────────────────────────────────────
# DATABASE
# ─────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/probity
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/probity

# ─────────────────────────────────────────────
# ODDS API (The Odds API – for live bookmaker lines)
# Get free key at: https://the-odds-api.com
# ─────────────────────────────────────────────
ODDS_API_KEY=your_odds_api_key_here
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# ─────────────────────────────────────────────
# FOOTBALL DATA CO UK (Free historical CSVs)
# No key needed
# ─────────────────────────────────────────────
FOOTBALL_DATA_BASE_URL=https://www.football-data.co.uk/mmz4281

# ─────────────────────────────────────────────
# MODEL SETTINGS
# ─────────────────────────────────────────────
MODEL_CALIBRATION_WINDOW_DAYS=1095     # 3 years
LAMBDA_DECAY=0.0065                    # EWM decay – tune via CV
MAX_GOALS=7                            # Score matrix dimension

# ─────────────────────────────────────────────
# EDGE DETECTION
# ─────────────────────────────────────────────
MIN_EDGE_THRESHOLD=0.025               # 2.5% minimum edge
EDGE_SCAN_INTERVAL_SECONDS=90

# ─────────────────────────────────────────────
# KELLY
# ─────────────────────────────────────────────
KELLY_FRACTION=0.25
BANKROLL_INITIAL=1000.0

# ─────────────────────────────────────────────
# API
# ─────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-me-in-production
